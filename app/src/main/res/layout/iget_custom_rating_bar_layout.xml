<com.android.systemui.view.ratingbar.RatingBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <com.android.systemui.view.ratingbar.ShapeDrawableRatingBar
        android:id="@+id/iget_custom_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1"
        app:sdr_backgroundDrawable="@drawable/iget_ratingbar_background_larger"
        app:sdr_progressDrawable="@drawable/iget_ratingbar_progress_larger"
        android:layout_gravity="center_vertical"
        android:indeterminateOnly="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="15dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        />
</com.android.systemui.view.ratingbar.RatingBarLayout>
